function Phase = NorPhase(Phase)
% This function normalizes the phase data and find the relative difference
% phase from the first value.
if max(max(Phase))>2 | min(min(Phase))<-2
    Phase=Phase/2/pi;
end

for i=2:length(Phase)
    Phase(1,i)=Phase(1,i)-Phase(1,1);
end
Phase(1,1)=-1;

for i=1:length(Phase)
    while Phase(1,i)>0
        Phase(1,i)=Phase(1,i)-1;

    end
end

end